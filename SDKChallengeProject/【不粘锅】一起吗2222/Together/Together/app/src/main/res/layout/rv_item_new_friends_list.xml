<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/rv_new_friends_bg"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/selector_cliced_list_item"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/rv_new_friends_headImg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="12dp"
        android:src="@drawable/default_head_img"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rv_new_friends_bg"
        app:layout_constraintBottom_toBottomOf="@+id/rv_new_friends_bg"/>

    <TextView
        android:id="@+id/rv_new_friends_nickName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="16dp"
        android:text="昵称"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintLeft_toRightOf="@+id/rv_new_friends_headImg"
        app:layout_constraintTop_toTopOf="@+id/rv_new_friends_headImg" />

    <TextView
        android:id="@+id/rv_new_friends_verify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="16dp"
        android:text="验证消息"
        android:textSize="14dp"
        app:layout_constraintLeft_toRightOf="@+id/rv_new_friends_headImg"
        app:layout_constraintBottom_toBottomOf="@+id/rv_new_friends_headImg" />

    <TextView
        android:id="@+id/rv_new_friends_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="16dp"
        android:text="状态"
        android:textSize="16dp"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"/>
    
    <Button
        android:id="@+id/rv_new_friends_btn_accept"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:text="接受"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/rv_new_friends_btn_refuse"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:text="拒绝"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toLeftOf="@+id/rv_new_friends_btn_accept"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_press_material"
        android:layout_marginLeft="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_new_friends_bg"/>


</android.support.constraint.ConstraintLayout>