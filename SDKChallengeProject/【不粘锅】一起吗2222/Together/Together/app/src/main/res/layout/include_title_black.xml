<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:background="@color/white">

    <ImageButton
        android:id="@+id/include_title_black_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/bg_login_navigation_bar"
        android:contentDescription="@null"
        android:src="@mipmap/btn_back_black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/include_title_black_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="滴滴"
        android:textColor="@color/balck"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/include_title_black_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/include_title_black_back" />

</android.support.constraint.ConstraintLayout>