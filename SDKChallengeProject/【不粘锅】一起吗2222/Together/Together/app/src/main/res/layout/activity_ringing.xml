<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="追番提醒"
        android:textColor="@color/title_bule"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextClock
        android:id="@+id/ringing_moring"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:format24Hour="aa"
        android:format12Hour="aa"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_marginTop="80dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextClock
        android:id="@+id/ringing_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:format24Hour="HH:mm"
        android:format12Hour="hh:mm"
        android:textSize="32sp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ringing_moring"/>

    <TextView
        android:id="@+id/ringing_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="这个勇者明明超强却过分慎重"
        android:textColor="#ff9000"
        android:textSize="16sp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:scrollHorizontally="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:layout_marginTop="38dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ringing_time"/>

    <ImageView
        android:id="@+id/ringing_microphone"
        android:layout_width="42dp"
        android:layout_height="82dp"
        android:background="@drawable/ringing_microphone"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ringing_content"/>

    <ImageView
        android:id="@+id/ringing_animation1"
        android:layout_width="4dp"
        android:layout_height="55dp"
        android:background="@drawable/ringing_animation_max"
        android:layout_marginRight="64dp"
        app:layout_constraintRight_toLeftOf="@id/ringing_microphone"
        app:layout_constraintTop_toTopOf="@id/ringing_microphone"
        app:layout_constraintBottom_toBottomOf="@id/ringing_microphone"/>
    <ImageView
        android:id="@+id/ringing_animation2"
        android:layout_width="4dp"
        android:layout_height="55dp"
        android:background="@drawable/ringing_animation_max"
        android:layout_marginRight="54dp"
        app:layout_constraintRight_toLeftOf="@id/ringing_microphone"
        app:layout_constraintTop_toTopOf="@id/ringing_microphone"
        app:layout_constraintBottom_toBottomOf="@id/ringing_microphone"/>
    <ImageView
        android:id="@+id/ringing_animation3"
        android:layout_width="4dp"
        android:layout_height="55dp"
        android:background="@drawable/ringing_animation_max"
        android:layout_marginRight="44dp"
        app:layout_constraintRight_toLeftOf="@id/ringing_microphone"
        app:layout_constraintTop_toTopOf="@id/ringing_microphone"
        app:layout_constraintBottom_toBottomOf="@id/ringing_microphone"/>
    <ImageView
        android:id="@+id/ringing_animation4"
        android:layout_width="4dp"
        android:layout_height="55dp"
        android:background="@drawable/ringing_animation_max"
        android:layout_marginRight="34dp"
        app:layout_constraintRight_toLeftOf="@id/ringing_microphone"
        app:layout_constraintTop_toTopOf="@id/ringing_microphone"
        app:layout_constraintBottom_toBottomOf="@id/ringing_microphone"/>
    <ImageView
        android:id="@+id/ringing_animation5"
        android:layout_width="4dp"
        android:layout_height="55dp"
        android:background="@drawable/ringing_animation_max"
        android:layout_marginRight="24dp"
        app:layout_constraintRight_toLeftOf="@id/ringing_microphone"
        app:layout_constraintTop_toTopOf="@id/ringing_microphone"
        app:layout_constraintBottom_toBottomOf="@id/ringing_microphone"/>
    <ImageView
        android:id="@+id/ringing_animation6"
        android:layout_width="4dp"
        android:layout_height="55dp"
        android:background="@drawable/ringing_animation_max"
        android:layout_marginRight="14dp"
        app:layout_constraintRight_toLeftOf="@id/ringing_microphone"
        app:layout_constraintTop_toTopOf="@id/ringing_microphone"
        app:layout_constraintBottom_toBottomOf="@id/ringing_microphone"/>

    <ImageView
        android:id="@+id/ringing_animation7"
        android:layout_width="4dp"
        android:layout_height="55dp"
        android:background="@drawable/ringing_animation_max"
        android:layout_marginLeft="14dp"
        app:layout_constraintLeft_toRightOf="@id/ringing_microphone"
        app:layout_constraintTop_toTopOf="@id/ringing_microphone"
        app:layout_constraintBottom_toBottomOf="@id/ringing_microphone"/>

    <ImageView
        android:id="@+id/ringing_animation8"
        android:layout_width="4dp"
        android:layout_height="55dp"
        android:background="@drawable/ringing_animation_max"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toRightOf="@id/ringing_microphone"
        app:layout_constraintTop_toTopOf="@id/ringing_microphone"
        app:layout_constraintBottom_toBottomOf="@id/ringing_microphone"/>

    <ImageView
        android:id="@+id/ringing_animation9"
        android:layout_width="4dp"
        android:layout_height="55dp"
        android:background="@drawable/ringing_animation_max"
        android:layout_marginLeft="34dp"
        app:layout_constraintLeft_toRightOf="@id/ringing_microphone"
        app:layout_constraintTop_toTopOf="@id/ringing_microphone"
        app:layout_constraintBottom_toBottomOf="@id/ringing_microphone"/>

    <ImageView
        android:id="@+id/ringing_animation10"
        android:layout_width="4dp"
        android:layout_height="55dp"
        android:background="@drawable/ringing_animation_max"
        android:layout_marginLeft="44dp"
        app:layout_constraintLeft_toRightOf="@id/ringing_microphone"
        app:layout_constraintTop_toTopOf="@id/ringing_microphone"
        app:layout_constraintBottom_toBottomOf="@id/ringing_microphone"/>

    <ImageView
        android:id="@+id/ringing_animation11"
        android:layout_width="4dp"
        android:layout_height="55dp"
        android:background="@drawable/ringing_animation_max"
        android:layout_marginLeft="54dp"
        app:layout_constraintLeft_toRightOf="@id/ringing_microphone"
        app:layout_constraintTop_toTopOf="@id/ringing_microphone"
        app:layout_constraintBottom_toBottomOf="@id/ringing_microphone"/>

    <ImageView
        android:id="@+id/ringing_animation12"
        android:layout_width="4dp"
        android:layout_height="55dp"
        android:background="@drawable/ringing_animation_max"
        android:layout_marginLeft="64dp"
        app:layout_constraintLeft_toRightOf="@id/ringing_microphone"
        app:layout_constraintTop_toTopOf="@id/ringing_microphone"
        app:layout_constraintBottom_toBottomOf="@id/ringing_microphone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ringing_scolle_close"
        android:text="向上滑动并关闭"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:drawablePadding="4dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>