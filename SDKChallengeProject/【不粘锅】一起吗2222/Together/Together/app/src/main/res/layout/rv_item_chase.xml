<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/rv_item_chase_img"
        android:background="#996060"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:scaleType="center"
        android:src="@drawable/banner1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rv_item_chase_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:textSize="12sp"
        android:textColor="@color/balck"
        android:layout_marginTop="2dp"
        app:layout_constraintLeft_toLeftOf="@+id/rv_item_chase_img"
        app:layout_constraintRight_toRightOf="@+id/rv_item_chase_img"
        app:layout_constraintTop_toBottomOf="@+id/rv_item_chase_img"/>

</android.support.constraint.ConstraintLayout>